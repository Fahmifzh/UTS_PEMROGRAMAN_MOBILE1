<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="@color/softBeige">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#A7D1EB"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:title="Tambah Pengaduan"
        app:titleTextColor="@color/offWhite"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <EditText
        android:id="@+id/judulLaporanEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/offWhite"
        android:hint="Judul Laporan"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="#757575" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Kategori"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/kategoriSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/offWhite"
        android:padding="12dp" />

    <EditText
        android:id="@+id/deskripsiLaporanEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offWhite"
        android:gravity="top|start"
        android:hint="Deskripsi Laporan"
        android:inputType="textMultiLine"
        android:minHeight="120dp"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="#757575" />

    <Button
        android:id="@+id/kirimButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/coralPink"
        android:text="Kirim"
        android:textColor="@android:color/white" />

</LinearLayout>