<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/pengirimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pengirim"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/isiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_chat_bubble"
        android:padding="8dp"
        android:text="Isi pesan chat..."
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/waktuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Waktu Kirim"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="end"/>

</LinearLayout>